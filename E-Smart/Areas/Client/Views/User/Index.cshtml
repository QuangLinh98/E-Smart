
@model IEnumerable<E_Smart.Areas.Client.Models.User>   // Vì sử dụng thư viên X.PageList phân trang lên phải chuyển đổi

<div class="row">
	<h2>Product List</h2>
	<div class="col- text-end">

		<a class="btn btn-secondary" asp-action="Create" asp-area="Admin">
			<i class="bi bi-plus-circle"></i>
			Create a new Product
		</a>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>UseName</th>
				<th>Email</th>
				<th>Address</th>
				<th>Phone</th>
				<th>Status</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>

			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.UserName</td>
					<td>@item.Email</td>
					<td>@item.Address</td>
					<td>@item.Phone</td>
					<td>@item.Status</td>
					
					<td>
						<a class="btn btn-warning" asp-route-id="@item.Id" asp-action="Edit">
							<i class="bi bi-pencil-square"></i>
							Edit
						</a>
						<a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete">
							<i class="bi bi-trash3"></i>
							Delete
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>