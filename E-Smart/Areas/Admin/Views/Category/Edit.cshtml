@model E_Smart.Areas.Admin.Models.Category

<div class="row">
    <h2>Category form edit</h2>
    <form asp-action="Edit">
        <div class="mb-3 mt-3">
            <input type="hidden" asp-for="CategoryId">
            <label for="name">Name:</label>
            <input type="text" class="form-control"
                   placeholder="Enter Name" asp-for="Category_name">
        </div>
        <button type="submit" class="btn btn-primary" asp-action="Index">Back</button>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>